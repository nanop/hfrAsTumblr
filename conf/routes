# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# index
GET     /                                           controllers.Application.index

# tumblr
GET     /api/tumblr/sites                           controllers.Application.sites()
GET     /api/tumblr/:siteId                         controllers.Application.getSiteFirstPage(siteId: String)
GET     /api/tumblr/:siteId/lastPageInfos           controllers.Application.getSiteTotalPages(siteId: String)
GET     /api/tumblr/:siteId/page/:pageNumber        controllers.Application.getSitePageByPageNumber(siteId: String, pageNumber: Int)

# twitter
GET     /api/tweets/:query                          controllers.Tweets.index(query: String)
GET     /api/tweets/stream/:query                   controllers.Tweets.stream(query: String)
GET     /api/tweets/stream/:query                   controllers.Tweets.stream(query: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)