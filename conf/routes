# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index

GET     /topics                                 controllers.Application.topics()
GET     /topics/:topicId/gifs                   controllers.Application.topicGifs(topicId: String)
GET     /topics/:topicId/page/:pageNumber       controllers.Application.topicChangePage(topicId: String, pageNumber: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
